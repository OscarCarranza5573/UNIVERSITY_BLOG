# Base de datos MySQL
DB_HOST=mysql
DB_PORT=3306
DB_USER=app_user
DB_PASSWORD=app_password123
DB_NAME=university_auth

# MongoDB
MONGO_URL=mongodb://admin:adminpassword123@mongodb:27017/university_cvs?authSource=admin

# Redis
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Services URLs
API_GATEWAY_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3001
CV_SERVICE_URL=http://localhost:3002
FILE_SERVICE_URL=http://localhost:3003

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Development
NODE_ENV=development
LOG_LEVEL=debug